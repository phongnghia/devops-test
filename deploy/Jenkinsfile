pipeline {
    agent any

    stages {
        stage('Checkout'){
            steps {
                checkout scmGit(branches: [[name: '*/devops-test']],
                browser: github('https://github.com/phongnghia/devops-test.git'),
                extensions: [],
                userRemoteConfigs: [[url: 'https://github.com/phongnghia/devops-test.git']])
            }
        }
        stage('Build') {
            steps {
                sh 'apt-get update; apt install -y python3'
                sh 'python3 -m pip install --upgrade pip; pip3 install ansible boto3'
                sh 'echo $DOCKERHUB_TOKEN > token.txt 2>/dev/null'
                sh 'ansible-playbook deploy-docker/install.yml --skip-tags "pre_setup_stage,deployment_stage" --extra-vars "dockerhub_username=$DOCKERHUB_USERNAME"'
            }
        }
        stage('Validation') {
            steps {
                sh 'ansible-playbook deploy-docker/install.yml --skip-tags "build_stage,deployment_stage"'
            }
        }
        stage('Deploy') {
            steps {
                sh 'ansible-playbook deploy-docker/install.yml --skip-tags "build_stage,deployment_stage"'
            }
        }
    }
}
